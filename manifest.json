{
  "name": "Youtube ES (Enhancement Suite)",
  "version": "1.1",
  "description": "Improve youtube experience",
  "author": "Jason Perlman (PerlmanLabs.com)",
  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "js": ["js/hideads.js"]
  }],
  "background": {
   "scripts": ["js/background.js"],
   "persistent": false
  },
  "permissions": [
    "storage",
    "declarativeContent"
  ],
  "page_action": {
     "default_popup": "html/popup.html"
   },
   "web_accessible_resources": [
       "css/hide_ads.css"
   ],
  "manifest_version": 2
}
